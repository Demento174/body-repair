<section class="s_offer_form">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                <div class="s_offer_form__img">
                    <img src="{{ img.url }}" alt="{{ img.alt }}">
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-5 col-xl-5">
                <h2 class="s_title">{{ title }}</h2>
                <form class="_form form">
                    <input type="hidden" data-title="Форма" value="Узнать стоимость на услугу {{ post_title }}" data-name="form">
                    <div class="form__input">
                        <input type="text" data-name="name"  placeholder="ФИО получателя">
                    </div>
                    <div class="form__input">
                        <input type="text"  data-name="name" placeholder="Контактный телефон">
                    </div>
                    <button type="submit" class="btn send">{{ btn }}</button>
                    <div class="response">{{ response }}</div>
                </form>
            </div>
        </div>
    </div>
</section>