			<form action="/" class="_form">
				<div class="flex_column align_center">
					<input data-title="Форма" data-name="form" type="hidden" value="Заявка Забранировать тоовар в клик">
					<input type="hidden" data-title="Товар" data-name="product">
					<input type="hidden" data-title="Артикуль" data-name="number">
					<input type="hidden" data-title="Количество" data-name="quantity">
					<input type="text" class="input" placeholder="Ваше Имя" data-title="Имя" data-name = "name">
					<input type="tel" class="input" placeholder="Контактный телефон" data-title="Телефон" data-name = "phone">
					{% include './blocks/base/form/personal.twig' %}
					<button class="btn btn--brown send">
						{{ get_field('productPage_formModal_buy_btn','options') }}
					</button>
					<div class="response">
						{{ get_field('productPage_formModal_buy_response','options') }}
					</div>
				</div>
			</form>
		</div>
	</div>
</section>


